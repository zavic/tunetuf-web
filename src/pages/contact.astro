---
import Layout from "@layouts/Layout.astro";
---

<Layout>
    <div class="h-18"></div>
    <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Contact Details -->
        <div>
            <p
                class="self-start inline font-sans text-xl font-medium text-transparent bg-clip-text bg-gradient-to-br from-[#840ABE] to-[#F50C81]"
            >
                Contact Us
            </p>
            <h2 class="text-4xl font-bold pb-6">Get in Touch</h2>
            <p class="text-xl text-gray-300 mb-8">
                Have any questions? or want to collaborate? Reach out to us
                anytime.
            </p>
            <div class="space-y-6">
                <!-- Location -->
                <div class="flex items-start">
                    <svg
                        class="h-6 w-6 text-pink-600 mt-1 mr-4 flex-shrink-0"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 11c1.656 0 3-1.343 3-3s-1.344-3-3-3-3 1.343-3 3 1.344 3 3 3zm0 1c-2.667 0-8 1.333-8 4v2h16v-2c0-2.667-5.333-4-8-4z"
                        ></path>
                    </svg>
                    <div>
                        <h3 class="font-bold text-lg mb-1">Location</h3>
                        <p class="text-gray-300">
                            Gang Mataram, RT.18 RW.05, Kalisari, Losari,
                            Cirebon, Indonesia.
                        </p>
                    </div>
                </div>

                <!-- Phone -->
                <div class="flex items-start">
                    <svg
                        class="h-6 w-6 text-pink-600 mt-1 mr-4 flex-shrink-0"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 5a2 2 0 012-2h1l2 5-2 1a11 11 0 006 6l1-2 5 2v1a2 2 0 01-2 2h-1c-6.627 0-12-5.373-12-12V5z"
                        ></path>
                    </svg>
                    <div>
                        <h3 class="font-bold text-lg mb-1">WhatsApp</h3>
                        <p class="text-gray-300">+62 851 7788 8394</p>
                    </div>
                </div>

                <!-- Email -->
                <div class="flex items-start">
                    <svg
                        class="h-6 w-6 text-pink-600 mt-1 mr-4 flex-shrink-0"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M16 12l-4-4-4 4m8 0v4a2 2 0 01-2 2H6a2 2 0 01-2-2v-4m0-4a2 2 0 012-2h8a2 2 0 012 2v4z"
                        ></path>
                    </svg>
                    <div>
                        <h3 class="font-bold text-lg mb-1">Email</h3>
                        <p class="text-gray-300">tunetufofficial@gmail.com</p>
                    </div>
                </div>
            </div>

            <!-- Social Icons -->
            <div class="mt-8 flex space-x-4">
                <!-- Facebook -->
                <a
                    href="https://web.facebook.com/people/Tunetuf/61577376971656/"
                    target="_blank"
                    class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center hover:bg-pink-700 transition-colors"
                    aria-label="Facebook"
                >
                    <svg
                        class="h-5 w-5"
                        fill="currentColor"
                        viewBox="0 0 24 24"
