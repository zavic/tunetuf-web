---
import { Image } from "astro:assets";
const { title, description, img, link } = Astro.props;
---

<div class="carousel-item hidden absolute top-0 left-0 w-full h-full">
    <div class="w-full h-full sm:p-6 lg:p-8 xl:p-10">
        <a href={link} target="_blank">
            <div
                class="w-full h-full rounded-xl sm:rounded-2xl overflow-hidden relative group"
            >
                <Image
                    src={img}
                    alt={title}
                    loading="eager"
                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                />

                <div class="absolute inset-0 bg-black/10"></div>
                <div
                    class="absolute inset-x-0 bottom-0 p-4 sm:p-8 bg-gradient-to-t from-black/80 via-black/40 to-transparent"
                >
                    <h3
                        class="text-white text-xl sm:text-2xl md:text-3xl font-bold"
                    >
                        {title}
                    </h3>
                    <p
                        class="text-gray-200 text-sm sm:text-base md:text-lg max-w-2xl"
                    >
                        {description}
                    </p>
                </div>
            </div>
        </a>
    </div>
</div>
