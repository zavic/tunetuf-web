---
import Logo from "@components/Logo.astro";

const navbarLinks = [
    { name: "Talents", href: "#talents" },
    { name: "Catalogues", href: "#catalogues" },
    { name: "About", href: "#about" },
    { name: "Contact", href: "#contact" },
];
---

<!-- Navbar Component -->
<nav class="bg-gray-800 shadow-lg border-gray-700 sticky top-0 z-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
            <!-- Logo -->
            <Logo />

            <!-- Desktop Menu -->
            <div class="hidden items-center md:flex gap-6">
                {
                    navbarLinks.map((link) => (
                        <a
                            href={link.href}
                            class="text-gray-300 hover:text-pink-500 px-3 py-2 rounded-md text-sm font-medium transition-colors"
                        >
                            {link.name}
                        </a>
                    ))
                }
            </div>

            <!-- Mobile Menu Button -->
            <div class="flex md:hidden items-center">
                <button
                    id="mobile-menu-button"
                    class="text-gray-300 hover:text-pink-500 focus:outline-none focus:text-pink-500"
                >
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</nav>

<!-- Mobile Sidebar Overlay -->
<div
    id="sidebar-overlay"
    class="fixed inset-0 bg-black/50 z-40 hidden md:hidden"
>
</div>

<!-- Mobile Sidebar -->
<div
    id="mobile-sidebar"
    class="fixed top-0 right-0 h-full w-80 bg-gray-800 shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-50 md:hidden"
>
    <div class="flex flex-col h-full">
        <!-- Sidebar Menu - Scrollable Area -->
        <div
            class="flex-1 overflow-y-auto scrollbar-thin scrollbar-thumb-gray-600 scrollbar-track-gray-800 sidebar-scroll"
        >
            <!-- Sidebar Header -->
            <div class="flex items-center justify-between flex-shrink-0 p-4">
                <!-- Logo -->
                <Logo />
                <button
                    id="close-sidebar"
                    class="text-gray-400 hover:text-white p-2 rounded-lg hover:bg-gray-700 transition-colors"
                >
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <nav class="space-y-2 px-2">
                {
                    navbarLinks.map((link) => (
                        <a
                            href={link.href}
                            class="block px-2 py-2.5 text-gray-300 hover:bg-gray-700 hover:text-pink-500 rounded-lg transition-colors"
                        >
                            {link.name}
                        </a>
                    ))
                }
            </nav>
        </div>

        <!-- Sidebar Footer -->
        <!-- <div class="p-4 border-t border-gray-700 flex-shrink-0">
            <button
                class="w-full bg-pink-600 text-white px-4 py-3 rounded-lg hover:bg-pink-700 transition-colors shadow-lg"
            >
                Masuk
            </button>
        </div> -->
    </div>
</div>
